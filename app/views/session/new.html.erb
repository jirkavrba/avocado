<div class="row">
  <div class="col-sm-12 col-md-6 offset-md-3">
    <div class="content">
      <h2 class="font-size-24 text-center">Sign in</h2>

      <div class="card">
        <%= form_with(url: sign_in_path, method: :post) do %>

          <div class="form-group">
            <%= label_tag :username %>
            <%= text_field_tag :username, '', required: true, class: 'form-control text-monospace' %>
          </div>

          <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, '', required: true, class: 'form-control text-monospace' %>
          </div>

          <div class="d-flex">
            <%= submit_tag "Sign in", class: 'btn btn-primary ml-auto' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>