<h1 class="content-title">Edit subject <span class="text-primary"><%= @subject.title.downcase %></span></h1>

<div class="card mx-0">
  <%= form_with model: @subject, url: subject_path(@subject), method: :patch do %>

    <div class="form-group">
      <%= label_tag :code %>
      <%= text_field :subject, :code, required: true, class: 'form-control text-monospace' %>
    </div>

    <div class="form-group">
      <%= label_tag :title %>
      <%= text_field :subject, :title, required: true, class: 'form-control' %>
    </div>

    <%= submit_tag 'Save changes', class: 'btn btn-primary' %>
  <% end %>
</div>
