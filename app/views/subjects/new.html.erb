<h1 class="content-title">Add a new subject</h1>

<div class="card mx-0">
  <%= form_with url: subjects_path, method: :post do %>

    <div class="form-group">
      <%= label_tag :code %>
      <%= text_field :subject, :code, required: true, class: 'form-control text-monospace' %>
    </div>

    <div class="form-group">
      <%= label_tag :title %>
      <%= text_field :subject, :title, required: true, class: 'form-control' %>
    </div>

    <%= submit_tag 'Add', class: 'btn btn-primary' %>
  <% end %>
</div>
