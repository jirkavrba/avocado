<h1>Add a new card to collection <%= @card_collection.title %></h1>

<%= form_with model: @card, url: card_collection_cards_path(@card_collection), method: :post do %>
  <%= label_tag :title %><br>
  <%= text_field :card, :title %><br>

  <br>
  <%= label_tag :question %><br>
  <%= text_area :card, :question, cols: 50, rows: 15 %><br>

  <br>
  <%= label_tag :answer %><br>
  <%= text_area :card, :answer, cols: 50, rows: 15 %><br>

  <%= submit_tag "Add" %>

<% end %>