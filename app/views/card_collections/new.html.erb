<h1 class="content-title">Create a new card collection</h1>

<div class="card mx-0">
  <%= form_with url: card_collections_path, method: :post do %>
    <div class="form-group">
      <%= label_tag :title %>
      <%= text_field :card_collection, :title, required: false, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :subject %>
      <%= select :card_collection, :subject_id, options_from_collection_for_select(@subjects, 'id', 'title'), { include_blank: "None" }, { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <div class="custom-checkbox">
        <%= check_box :card_collection, :is_public %>
        <%= label_tag :card_collection_is_public, 'Share this cards collection with everybody (make it public)' %><br>
      </div>

      <div class="mt-5">
        <small class="text-muted">(This can be later changed in settings)</small><br>
      </div>
    </div>

    <%= submit_tag 'Create', class: 'btn btn-primary' %>
  <% end %>
</div>